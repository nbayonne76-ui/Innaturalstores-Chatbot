{
  "name": "innatural-chatbot-backend",
  "version": "1.0.0",
  "description": "Backend API for INnatural chatbot powered by Claude AI",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "prepare": "cd .. && husky backend/.husky"
  },
  "keywords": [
    "chatbot",
    "claude",
    "ai",
    "arabic",
    "natural-hair-care"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@prisma/adapter-pg": "^5.22.0",
    "@prisma/client": "^5.22.0",
    "@sentry/integrations": "^7.114.0",
    "@sentry/node": "^10.31.0",
    "@sentry/profiling-node": "^10.31.0",
    "axios": "^1.13.2",
    "body-parser": "^1.20.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-slow-down": "^3.0.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "joi": "^17.13.3",
    "memory-cache": "^0.2.0",
    "node-cache": "^5.1.2",
    "openai": "^6.9.1",
    "pg": "^8.16.3",
    "prisma": "^5.22.0",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^4.3.1",
    "response-time": "^2.3.4",
    "sanitize-html": "^2.17.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@jest/globals": "^30.2.0",
    "babel-jest": "^30.2.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.0.1",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4"
  }
